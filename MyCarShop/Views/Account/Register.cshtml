@model MyCarShop.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}


@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-autoriz" }))
{
    @Html.AntiForgeryToken()
    <h2>Регистрация</h2>
        @Html.ValidationSummary(false)
        <table>
            <tr>
                <td><label for="Email">Email</label></td>
                <td>@Html.EditorFor(x => x.Email, new { htmlAttributes = new { @class = "form-control" } })</td>
            </tr>
            <tr>
                <td><label for="Year">Год рождения</label></td>
                <td>@Html.EditorFor(x => x.Year, new { htmlAttributes = new { @class = "form-control" } })</td>
            </tr>

            <tr>
                <td><label for="Password">Password</label></td>
                <td>@Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control" } })</td>
            </tr>
            <tr>
                <td><label for="PasswordConfirm">Confirm Pass</label></td>
                <td>@Html.EditorFor(x => x.PasswordConfirm, new { htmlAttributes = new { @class = "form-control" } })</td>
            </tr>

            <tr style="text-align:right">
                <td></td>
                <td>
                    <input class="login-button" type="submit" value="Зарегистрировать" />
                </td>
            </tr>
        </table>
}

